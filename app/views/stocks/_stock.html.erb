<% if current_user != post.user && logged_in? %>
  <div class="stock">
    <% if post.stocked?(current_user) %>
      <%= form_with model: post.stocks.find_by(user_id: current_user.id), html: { method: :delete } do |f| %>
        <%= button_tag class: "btn" do %>
          <i class="fas fa-folder-minus fa-3x"></i>
        <% end %>
      <% end %>

    <% else %>
      <%= form_with model: post.stocks.build do |f| %>
        <div><%= hidden_field_tag :post_id, post.id %></div>
        <%= button_tag class: "btn" do %>
          <i class="fas fa-folder-plus fa-3x"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
