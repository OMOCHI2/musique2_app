<% provide(:title, "パスワードの再設定") %>

<div class="row">
  <div class="col-md-7 m-auto">
    <h2>パスワードの再設定</h2>
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, "パスワード" %>
      <span class="badge bg-danger">必須</span>
      <small class="text-muted">半角英数字混合８文字以上</small>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "確認用パスワード" %>
      <span class="badge bg-danger">必須</span>
      <small class="text-muted">半角英数字混合８文字以上</small>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "設定する", class: "btn btn-primary float-end mt-3" %>
    <% end %>
  </div>
</div>
