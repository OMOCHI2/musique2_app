<% provide :title, "お問い合わせ" %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-9 m-auto">
      <h2>お問い合わせ</h2>

      <%= form_with model: @contact, url: contact_confirm_path do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <div class="form-group">
          <%= f.label :name, "名前" %>
          <span class="badge bg-danger">必須</span>
          <%= f.text_field :name, id: "name", class: "form-control", placeholder: "名前" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <span class="badge bg-danger">必須</span>
          <small class="text-muted">例：user@example.com</small>
          <%= f.text_field :email, id: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.label :content, "お問い合わせ内容" %>
          <span class="badge bg-danger">必須</span>
          <small class="text-muted">パスワード等の機密情報は含めないでください。</small>
          <%= f.text_area :content, id:          "content",
                                    class:       "form-control",
                                    placeholder: "お問い合わせ内容",
                                    rows:        "10"
          %>
        </div>

        <div class="float-end">
          <%= f.submit "確認", class: "btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
