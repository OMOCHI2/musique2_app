<aside class="col-md-4">
  <div class="user-section">
    <section class="user_info">
      <h1 class="text-center mb-5"><%= @user.name %></h1>
      <%= image_tag @user.image.attached? ? @user.image : "default_icon.png",
                    class: "rounded mx-auto d-block mb-3",
                    size: "200x200",
                    alt: "アイコン画像"
      %>
    </section>

    <section class="stats p-0 mt-0">
      <%= render "shared/follow_stats" %>
    </section>

    <section class="follow-and-unfollow">
      <%= render "users/follow_form" if logged_in? %>
    </section>

    <% if  current_user != nil && current_user.admin? && current_user != @user %>
      <div id="user-delete" class="d-flex justify-content-center mt-5">
        <%= link_to "違反ユーザーの削除", @user, class: "btn btn-danger mx-auto",
                    data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか？" }
        %>
      </div>
    <% end %>
  </div>
</aside>
